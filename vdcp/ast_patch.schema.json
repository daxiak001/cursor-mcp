{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AST Patch",
  "type": "object",
  "properties": {
    "language": { "type": "string", "enum": ["ts", "js", "py"] },
    "file_path": { "type": "string" },
    "operations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "op": { "type": "string", "enum": ["add", "remove", "replace"] },
          "selector": { "type": "string", "description": "AST选择器，如: function[name=exportData] 或 class[name=User]" },
          "node_type": { "type": "string", "description": "目标节点类型，如 FunctionDeclaration/ClassDeclaration" },
          "value": { "type": "string", "description": "用于add/replace的代码片段" }
        },
        "required": ["op", "selector"]
      },
      "minItems": 1
    }
  },
  "required": ["language", "file_path", "operations"]
}
